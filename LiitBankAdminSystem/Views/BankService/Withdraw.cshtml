@using Microsoft.CodeAnalysis.CSharp.Syntax
@model LiitBankAdminSystem.ViewModels.WithdrawViewModel



<form asp-controller="Cashier" asp-action="Withdraw" method="post">
    
    <div class="col-sm-12">

        <div class="card">
            <div class="card-header">
                <h5>Ta ut pengar</h5>
                <div class="card-header-right">
                    <i class="icofont icofont-spinner-alt-5"></i>
                </div>
            </div>
            
            <div class="card-block">
                <label asp-for="AccountId">Kontonummer</label>
                <div class="input-group">
                    <input type="text" class="form-control" asp-for="AccountId">
                    <span asp-validation-for="AccountId" class="field-validation-error" style="color: red"></span>
                </div>
            </div>
            <div class="card-block">
                <label asp-for="AmountToWithdraw">Summa att ta ut</label>
                <div class="input-group">
                    <input type="text" class="form-control" asp-for="AmountToWithdraw">
                    <span asp-validation-for="AmountToWithdraw" class="field-validation-error" style="color: red"></span>
                </div>
            </div>
            <div class="card-block">
                <label for="Date">Datum</label>
                <div class="input-group">
                    <input type="date" class="form-control" asp-for="TimeOfAcction" value="@Model.TimeOfAcction.ToShortDateString()">
                    <span asp-validation-for="TimeOfAcction" class="field-validation-error" style="color:red"></span>
                </div>
            </div>
            
            <button class="btn-outline-dark" type="submit">Ok</button>

        </div>
    </div>
   
</form>

